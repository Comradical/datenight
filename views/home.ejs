<% include ./partials/header %>

<h1 class="ui header">How should you spend your date nights?</h1>

<div class="ui main text container segment">
    <h2 class="ui center aligned icon header">
        <i class="circular users icon"></i>
    What activities do you enjoy?</h2>
    
    <form class="ui form" action="/people" method="POST">
        <div class="field center"><label>First Name</label><input type="text" name="person[firstname]" placeholder="First Name"></div>
        <div class="field center"><label>Last Name</label><input type="text" name="person[lastname]" placeholder="Last Name"></div>
        
        
    <% activities.forEach(function(activity){ %>
        <div class="slider"><label class="activity"><%= activity %></label>
            <div class="card">
                <input list="range" class="slider" type="range" min="1" max="5" name="answers[<%= activity %>]">
                 <label class="slider">1</label>
                 <label class="slider">2</label>
                 <label class="slider">3</label>
                 <label class="slider">4</label>
                 <label class="slider">5</label>
            </div>
        </div>
    <% }); %>
    
    <div class="field"><input id="compare" type="hidden" name="person[compare]" placeholder="The ID to Compare"></div>

        
        
        <div class="field"><input class="ui violet big basic button" type="submit"></div>
    </form>
</div>

<script src="../scripts/home.js"></script>
<% include ./partials/footer %>